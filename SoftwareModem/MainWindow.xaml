<Window x:Class="SoftwareModem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Software Modem" Height="350" Width="525" MinHeight="200" MinWidth="400">
    <Grid>
        <Button x:Name="CallButton" Content="Call" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Click="CallButton_Click" Height="22" Margin="10,10,0,0"/>
        <Button x:Name="AnswerButton" Content="Answer" Margin="90,10,0,0" VerticalAlignment="Top" Click="AnswerButton_Click" Height="22" HorizontalAlignment="Left" Width="75"/>
        <Button x:Name="HangupButton" Content="Hang up" HorizontalAlignment="Left" Width="75" Height="22" IsEnabled="False" Click="HangupButton_Click" Margin="170,10,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="lineInBox" VerticalAlignment="Top" Margin="250,10,10,0"/>
        <ScrollViewer Margin="10,37,10,38">
            <TextBlock x:Name="OutputBox" TextWrapping="Wrap" FontFamily="Consolas" />
        </ScrollViewer>
        <TextBox x:Name="InputBox" Margin="10,0,90,10" TextWrapping="Wrap" Height="23" VerticalAlignment="Bottom"/>
        <Button x:Name="SendButton" Content="Send" Margin="0,0,10,11" Height="22" VerticalAlignment="Bottom" IsDefault="True" Click="SendButton_Click" HorizontalAlignment="Right" Width="75"/>

    </Grid>
</Window>
